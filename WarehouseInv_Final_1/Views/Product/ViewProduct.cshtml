@model Product

<h3>@Model.Name Information</h3>

<table class="table">
    <tr>
        <th>UPC</th>
        <th>Name</th>
        <th>Price</th>
        <th>Category</th>
        <th>QTY</th>
    </tr>
    <tr>
        <td>@Model.UPC</td>
        <td>@Model.Name</td>
        <td>@Model.Price</td>
        <td>@Model.Category</td>
        <td>@Model.QTY</td>
    </tr>
</table>

<div style="display: block">
    <a href="/Product/UpdateProduct/@Model.UPC">Update this Product</a>
</div>

<div style="display: block">

    @using (Html.BeginForm("DeleteProduct", "Product", "Post"))
    {
        <input type="hidden" asp-for="UPC" value="@Model.UPC" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this product" />
    }
</div>
