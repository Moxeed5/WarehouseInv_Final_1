@model Product

@{
    var categories = new Dictionary<int, string>();

    categories.Add(1, "Computers");

    categories.Add(2, "Books");

    categories.Add(3, "Games");

    categories.Add(4, "Clothes");

    categories.Add(5, "Video Games");


    

}


<h2>Create a New Product</h2>



 <style >
    .bg-color {
        background-color: grey;
        opcaity: 1;
        font-size: 30px;
        
    }

    a {
        color: yellow;
    }

    .yellow-text{
        color: yellow;
    }
</style>

<div class="bg-color">
@using (Html.BeginForm("InsertProductToDatabase", "Product", "Post"))
{
    @*<input asp-for="UPC" type="hidden" value="" />*@

    @*<label asp-for="UPC" class="control-label">UPC</label>
    <input type="number" name="UPC" class="form-control" value="" />*@
        <div class="yellow-text">
    <label asp-for="UPC" class="control-label"></label>
    <input asp-validation-for="UPC" data-val="true" data-val-required="The UPC field is required." type="number" name="UPC" class="form-control" value="" required />

        
    <label asp-for="QTY" class="control-label">QTY</label>
        <input type="number" name="QTY" class="form-control" value="" required />
        

    <label asp-for="Name" class="control-label">Name</label>
    <input type="text" name="Name" class="form-control" value="" required/>

    <label asp-for="Price" class="control-label">Price</label>
    <input type="number" step="0.01" name="Price" class="form-control" required/>

    <label asp-for="Zone" class="control-label">Zone</label>
    <input type="number" name="Zone" class="form-control" required />

    <label asp-for="Isle" class="control-label">Isle</label>
    <input type="number" name="Isle" class="form-control" required/>
        
    <div class="form-group">
                <label for="">Select a Category</label>
            </div>
        <select class="form-control" name="Category" value="">
            @foreach (var cat in categories)
            {
                <option value="@cat.Value">@cat.Value</option>
            }
        </select>
    </div>
    

    <input type="submit" value="Create Product" class="btn btn-primary" />

}
</div>
