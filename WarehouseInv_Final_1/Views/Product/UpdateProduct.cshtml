@model Product

@{
    var categories = new Dictionary<int, string>();

    categories.Add(1, "Computers");

    categories.Add(2, "Books");

    categories.Add(3, "Games");

    categories.Add(4, "Clothes");

    categories.Add(5, "Video Games");

    

}

<style>
    .bg-color {
        background-color: grey;
        opcaity: 1;
        font-size: 30px;
    }

    a {
        color: yellow;
    }
    .yellow-text{
        color: yellow;
    }
</style>

<h2>Update @Model.Name</h2>

<div class="bg-color">
@using (Html.BeginForm("UpdateProductToDatabase", "Product", "Post"))
{
    <div class="yellow-text">

    <label asp-for="UPC" class="control-label">UPC</label>
    <input type="number" name="UPC" class="form-control" value="@Model.UPC" required/>

    <label asp-for="Name" class="control-label">Name</label>
    <input type="text" name="Name" class="form-control" value="@Model.Name" required/>

    <label asp-for="Price" class="control-label">Price</label>
    <input type="number" step="0.01" name="Price" class="form-control" value="@Model.Price" required/>

    <label asp-for="QTY" class="control-label">QTY</label>
    <input type="number" name="QTY" class="form-control" value="@Model.QTY" required/>

    <div class="form-group">
        <label for="">Select a Category</label>
        </div>
        <select class="form-control" name="Category" value="">
            @foreach (var cat in categories)
            {
                <option value="@cat.Value">@cat.Value</option>
            }
        </select>
    </div>

    <input type="submit" value="Update Product" class="btn btn-primary" />
}
</div>