    .bg-color {
        background-color: #808080;
        opcaity: 1;
        font-size: 30px;
    }

    a {
        color: yellow;
    }

    .low-qty {
        color: red;
    }
</style>

<div class="bg-color">

    <div class="a">

        <h2>Products</h2>

        <div style="display: block">
            <a href="/Product/InsertProduct/">Create a New Product</a>
