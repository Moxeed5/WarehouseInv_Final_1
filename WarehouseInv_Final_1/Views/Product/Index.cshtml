@model IEnumerable<Product>

<h2>Products</h2>

<div style="display: block">
    <a href="/Product/InsertProduct/">Create a New Product</a>
</div>

<table class="table">
    <tr>
        <th>UPC</th>
        <th>Name</th>
        <th>Price</th>
        <th>Category</th>
        <th>QTY</th>
        <th>Zone</th>
        <th>Isle</th>

    </tr>

    @foreach (var product in @Model)
    {
        <tr>
            <td><a href=/Product/ViewProduct/@product.UPC>@product.UPC</a></td>

            <td>@product.Name</td>
            <td>@product.Price</td>
            <td>@product.Category</td>
            <td>@product.QTY</td>
            <td>@product.Zone</td>
            <td>@product.Isle</td>
        </tr>
    }

</table>